<%- include('partials/header') %>
<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">Add Episode to <%= anime.name %></h1>
  
  <% if (messages.error) { %>
    <div class="bg-red-500 text-white p-2 rounded mb-4"><%= messages.error %></div>
  <% } %>
  
  <% if (messages.success) { %>
    <div class="bg-green-500 text-white p-2 rounded mb-4"><%= messages.success %></div>
  <% } %>
  
  <form action="/admin/add-episode/<%= anime._id %>" method="POST" enctype="application/x-www-form-urlencoded">
    <div class="mb-4">
      <label class="block mb-1" for="seasonNumber">Season Number</label>
      <input type="number" id="seasonNumber" name="seasonNumber" class="w-full p-2 rounded bg-gray-700 text-white" required min="1" />
    </div>
    
    <div class="mb-4">
      <label class="block mb-1" for="episodeNumber">Episode Number</label>
      <input type="number" id="episodeNumber" name="episodeNumber" class="w-full p-2 rounded bg-gray-700 text-white" required min="1" />
    </div>
    
    <div class="mb-4">
      <label class="block mb-1" for="title">Episode Title</label>
      <input type="text" id="title" name="title" class="w-full p-2 rounded bg-gray-700 text-white" required />
    </div>
    
    <div class="mb-4">
      <label class="block mb-1" for="videoUrl">Video URL (optional)</label>
      <input type="url" id="videoUrl" name="videoUrl" class="w-full p-2 rounded bg-gray-700 text-white" placeholder="https://strtape.tech/e/..." />
    </div>
    
    <div class="mb-4">
      <label class="block mb-1" for="embedCode">Embed Code (optional)</label>
      <textarea id="embedCode" name="embedCode" class="w-full p-2 rounded bg-gray-700 text-white" placeholder="<iframe src='...'></iframe>"></textarea>
    </div>
    
    <button type="submit" class="bg-blue-500 p-2 rounded">Add Episode</button>
  </form>
</div>
<%- include('partials/footer') %>