<%- include('partials/header') %>
<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">Manage Categories</h1>
  <form action="/admin/add-genre" method="POST" class="mb-4">
    <div class="flex space-x-4">
      <input type="text" name="name" placeholder="New Genre Name" class="p-2 rounded bg-gray-700 text-white w-1/3">
      <button type="submit" class="bg-green-500 p-2 rounded">Add Genre</button>
    </div>
  </form>
  <div class="grid grid-cols-3 gap-4">
    <% genres.forEach(genre => { %>
      <div class="border p-4 rounded">
        <h2 class="text-xl font-bold"><%= genre.name %></h2>
        <form action="/admin/edit-genre/<%= genre._id %>" method="POST" class="mt-2">
          <input type="text" name="name" value="<%= genre.name %>" class="p-2 rounded bg-gray-700 text-white w-full">
          <button type="submit" class="bg-yellow-500 p-1 rounded mt-2">Update</button>
        </form>
        <form action="/admin/delete-genre/<%= genre._id %>" method="POST" class="mt-2">
          <button type="submit" class="bg-red-500 p-1 rounded">Delete</button>
        </form>
      </div>
    <% }) %>
  </div>
</div>
<%- include('partials/footer') %>