<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Watch your favorite anime series online. Explore by genre, seasons, and episodes.">
  <meta name="keywords" content="anime, streaming, watch anime, anime series">
  <meta name="robots" content="index, follow">
  <title>AniFusionstream</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-gray-900 text-white">
  <nav class="bg-gray-800 p-4 flex justify-between items-center relative">
    <!-- Title (Left Side) with Decoration -->
    <div class="text-3xl font-extrabold bg-clip-text text-transparent bg-gradient-to-r from-pink-500 to-purple-500 drop-shadow-lg hover:scale-105 transition-transform duration-300">
      <a href="/">AniFusionstream</a>
    </div>

    <!-- Hamburger Menu (Right Side) for Small Screens -->
    <div class="md:hidden">
      <button id="hamburger-btn" class="text-white focus:outline-none">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </button>
    </div>

    <!-- Navigation Links (Hidden on Small Screens, Visible on Medium and Up) -->
    <div id="nav-links" class="hidden md:flex md:space-x-4">
      <a href="/" class="hover:underline">Home</a>
      <% if (!session.isUserAuthenticated) { %>
        <a href="/user/register" class="hover:underline">Register</a>
        <a href="/user/login" class="hover:underline">Login</a>
        <a href="/dmca" class="hover:underline">DMCA</a>
        <a href="/privacy-policy" class="hover:underline">Privacy-policy</a>
      <% } else { %>
        <a href="/user/logout" class="hover:underline">Logout</a>
        <a href="/dmca" class="hover:underline">DMCA</a>
        <a href="/privacy-policy" class="hover:underline">Privacy-policy</a>
      <% } %>
    </div>

    <!-- Mobile Menu (Hidden by Default, Toggles on Hamburger Click) -->
    <div id="mobile-menu" class="hidden absolute top-16 right-0 w-48 bg-gray-800 md:hidden z-50">
      <div class="flex flex-col space-y-2 p-4">
        <a href="/" class="hover:underline">Home</a>
        <% if (!session.isUserAuthenticated) { %>
          <a href="" class="hover:underline">Genre</a>
          <a href="/user/register" class="hover:underline">Register</a>
          <a href="/user/login" class="hover:underline">Login</a>
          <a href="/dmca" class="hover:underline">DMCA</a>
          <a href="/privacy-policy" class="hover:underline">Privacy-policy</a>
        <% } else { %>
          <a href="" class="hover:underline">Genre</a>
          <a href="/user/logout" class="hover:underline">Logout</a>
          <a href="/dmca" class="hover:underline">DMCA</a>
          <a href="/privacy-policy" class="hover:underline">Privacy-policy</a>
        <% } %>
      </div>
    </div>
  </nav>

  <script>
    // Hamburger menu toggle
    const hamburgerBtn = document.getElementById('hamburger-btn');
    const mobileMenu = document.getElementById('mobile-menu');

    hamburgerBtn.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  </script>
</body>
</html>