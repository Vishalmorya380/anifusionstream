<%- include('partials/header') %>
<div class="container mx-auto p-4 max-w-md">
  <h1 class="text-2xl font-bold mb-4">Forgot Password</h1>
  <% if (messages.length > 0) { %>
    <div class="bg-red-500 p-2 rounded mb-4"><%= messages %></div>
  <% } %>
  <form action="/user/forgot-password" method="POST">
    <div class="mb-4">
      <label class="block mb-1">Email</label>
      <input type="email" name="email" class="w-full p-2 rounded bg-gray-700 text-white" required>
    </div>
    <button type="submit" class="bg-blue-500 p-2 rounded w-full">Send OTP</button>
  </form>
</div>
<%- include('partials/footer') %>